                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. User Responsibilities"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="When using RuralConnect, you agree to:\n\n• Provide truthful and accurate complaint information\n• Not submit false, misleading, or malicious complaints\n• Respect the privacy and rights of others\n• Not use the App for illegal purposes\n• Not interfere with the App's functionality\n• Not attempt to gain unauthorized access to any systems\n• Comply with all applicable laws and regulations"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="20dp"/>

