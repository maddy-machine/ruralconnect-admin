                    android:layout_height="wrap_content"
                    android:text="We reserve the right to suspend or terminate your account at any time if you violate these Terms and Conditions. You may also delete your account at any time through the App settings."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="20dp"/>

                <!-- Changes to Terms -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10. Changes to Terms"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp"/>

