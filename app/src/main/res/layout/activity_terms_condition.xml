                    android:textColor="#666666"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="20dp"/>

                <!-- Limitation of Liability -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8. Limitation of Liability"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To the maximum extent permitted by law, Error-404 Team shall not be liable for any indirect, incidental, special, consequential, or punitive damages arising from your use of or inability to use the App."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="20dp"/>

                <!-- Termination -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9. Termination"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
