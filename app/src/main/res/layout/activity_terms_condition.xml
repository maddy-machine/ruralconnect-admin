                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Prohibited Conduct"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You may NOT:\n\n• Post offensive, abusive, or discriminatory content\n• Harass, threaten, or defame others\n• Upload malware or viruses\n• Spam or send unsolicited messages\n• Reverse engineer or decompile the App\n• Violate intellectual property rights\n• Use automated systems to access the App"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="20dp"/>

                <!-- Complaint Submission -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5. Complaint Submission"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Complaints must relate to genuine civic issues\n• You grant us the right to share complaint information with relevant authorities\n• We do not guarantee resolution timeframes\n• We reserve the right to remove inappropriate complaints\n• Photos uploaded must not violate privacy or contain inappropriate content"
